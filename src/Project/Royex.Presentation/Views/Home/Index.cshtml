@{
    ViewData["Title"] = "Home Page";
}

@section style{
    <link rel="stylesheet" href="./css/index.css"/>
}


<style>
    .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .popup-content {
        background-color: #3c40c6;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
    }

    .close{
        border:2px solid black;
        background-color:none;
        color:black;
        font-weight:bold;
    }

    #popupMessage{
        font-size:25px;
        font-weight:bold;
        color: white;
    }

</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p><a class="anchor" href="https://www.royex.ae/" target="_blank">Royex Technologies</a>.</p>
</div>

<div class="search">
    <form asp-controller="home" asp-action="getall">
        <div class="input-div">
            <label for="employeeId">Employee ID</label><input type="number" id="employeeId" name="Id"/>
        </div>
        <div class="button-div">
            <button class="submit" type="submit">Show Salary with Bonus</button>
        </div>
        
    </form>

    <div id="popup" class="popup">
        <div class="popup-content">
            <button class="close" onclick="closePopup()">&times;</button>
            <p id="popupMessage">@ViewBag.Message</p>
        </div>
    </div>
</div>

<script>
    // Function to show the popup
    function showPopup() {
        var popup = document.getElementById('popup');
        popup.style.display = 'block';
    }

    // Function to close the popup
    function closePopup() {
        var popup = document.getElementById('popup');
        popup.style.display = 'none';
    }

    // Show the popup when the page loads if there is a message
    window.onload = function () {
        var message = document.getElementById('popupMessage').innerText;
        if (message && message.trim() !== '') {
            showPopup();
        }
    }
</script>
